<?xml version="1.0" encoding="utf8"?>
<config>
    <target>
        <type>rpi</type>
        <name>GroundStation</name>
        <options>
            <architecture>arm64</architecture>
            <ip>10.100.0.1</ip>
            <hostname>spacepi-main-tracker</hostname>
        </options>
		<users>
			<user>
				<name>Grant Nichol</name>
				<uname>gwnichol</uname>
				<keys></keys>
				<email></email>
			</user>
		</users>
    </target>
    <module>
        <type>spacepi-modules/drivers/accelerometer</type>
        <options>
            <name>primary</name>
            <addr>0e</addr>
        </options>
    </module>
    <module>
        <type>spacepi-modules/drivers/battery</type>
        <options>
            <name>primary</name>
            <i2cFilename>/dev/i2c-1</i2cFilename>
            <highSideResistor>150</highSideResistor>
            <lowSideResistor>38</lowSideResistor>
            <i2cAddress>4b</i2cAddress>
            <postDelay>1</postDelay>
        </options>
    </module>
    <module>
        <type>spacepi-modules/drivers/compass</type>
        <start>manual</start>
        <options>
            <name>primary</name>
            <addr>1c</addr>
        </options>
    </module>
    <module>
        <type>spacepi-modules/drivers/dio</type>
        <options>
            <name>primary_uart</name>
            <pin>gpio:4</pin>
        </options>
    </module>
    <module>
        <type>spacepi-modules/drivers/gps</type>
        <options>
            <name>primary</name>
            <period>10000000</period>
            <host>localhost</host>
            <port>2947</port>
            <serial>/dev/ttyS0</serial>
        </options>
    </module>
    <module>
        <type>spacepi-modules/drivers/processor</type>
        <options>
            <name>primary</name>
            <period>1</period>
        </options>
    </module>
    <module>
        <type>spacepi-modules/drivers/radio</type>
        <start>manual</start>
        <options>
            <name>radio</name>
        </options>
    </module>
    <module>
        <type>spacepi-modules/drivers/stepper</type>
        <options>
            <name>prim_azi</name>
            <step>gpio:13</step>
            <dir>gpio:12</dir>
            <revolution>200</revolution>
            <microstep>PCA9571@25:2,PCA9571@25:3</microstep>
            <freq>10000</freq>
            <en>PCA9571@25:1</en>
            <reset>nc</reset>
            <sleep>PCA9571@25:0</sleep>
        </options>
    </module>
    <module>
        <type>spacepi-modules/drivers/stepper</type>
        <options>
            <name>prim_alt</name>
            <step>gpio:6</step>
            <dir>gpio:5</dir>
            <revolution>200</revolution>
            <microstep>PCA9571@25:6,PCA9571@25:7</microstep>
            <freq>10000</freq>
            <en>PCA9571@25:5</en>
            <reset>nc</reset>
            <sleep>PCA9571@25:4</sleep>
        </options>
    </module>
    <module>
        <type>spacepi-modules/logic/kinematics</type>
        <start>manual</start>
        <options>
            <name>rocket</name>
        </options>
    </module>
    <module>
        <type>spacepi-modules/logic/kinematics</type>
        <start>manual</start>
        <options>
            <name>tracker1</name>
        </options>
    </module>
    <module>
        <type>spacepi-modules/specific/antenna-tracker</type>
        <options>
            <azimuth>prim_azi</azimuth>
            <altitude>prim_alt</altitude>
            <station>tracker1</station>
            <rocket>rocket</rocket>
        </options>
    </module>
</config>
